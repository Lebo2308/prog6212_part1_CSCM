<!-- Approve Claim Page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Approve Claim Page | CSCM</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Header with navigation menu -->
    <header>
        <div class="header-container">
            <h1>CSCM</h1>
            <nav>
                <ul>
                    <li><a href="@Url.Action("Dashboard","Home")">Home</a></li>
                    <li><a href="@Url.Action("SubmitAClaim","Home")">Submit a Claim</a></li>
                    <li><a href="@Url.Action("TrackClaim","Home")">Track Claim</a></li>
                    <li><a href="@Url.Action("PreapproveClaim","Home")">Pre-Approve Claim</a></li>
                    <li><a href="@Url.Action("ApproveClaim","Home")">Approve Claim</a></li>
                    <li><a href="@Url.Action("Profile","Home")">Profile</a></li>
                    <li><a href="@Url.Action("Index","Home")">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="content">
        <!-- Approve Claim Page -->
        <div id="track-claims" class="page">
            <h2>Approve Claims</h2>
            <!-- Claims table displaying all claim information -->
            <table>
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>User ID</th>
                        <th>Date Submitted</th>
                        <th>Faculty Name</th>
                        <th>Module Name</th>
                        <th>Number Of Hours Worked</th>
                        <th>Rate: Amount Per Hour</th>
                        <th>Total Amount</th>
                        <th>Supporting Documents</th>
                        <th>Pre-Approve Date</th>
                        <th>Approve Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
					<!-- Claim 1 - Approved -->
                    <tr>
                        <td class="claim-id">CLAIM-001</td>
                        <td class="user-id">L103251</td>
                        <td>2025-09-10</td>
                        <td>Faculty of Science</td>
                        <td>Research Materials</td>
                        <td>10</td>
                        <td>R 350.00</td>
                        <td>R 3,500.00</td>
                        <td><a href="#" class="support-link">receipt_001.pdf</a></td>
                        <td>2025-09-12</td>
                        <td>2025-09-15</td>
                        <td><span class="status status-pre-approved">Approved</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn approve-btn">Pre-Approve</button>
                                <button class="action-btn reject-btn">Reject</button>
                            </div>
                        </td>
                    </tr>
					<!-- Claim 2 - Rejected -->
                    <tr>
                        <td class="claim-id">CLAIM-002</td>
                        <td class="user-id">L102895</td>
                        <td>2025-09-15</td>
                        <td>Faculty of Business</td>
                        <td>Conference Registration</td>
                        <td>5</td>
                        <td>R 500.00</td>
                        <td>R 2,500.00</td>
                        <td><a href="#" class="support-link">conference_invoice.pdf</a></td>
                        <td>2025-09-17</td>
                        <td>2025-09-25</td>
                        <td><span class="status status-rejected">Rejected</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn approve-btn">Pre-Approve</button>
                                <button class="action-btn reject-btn">Reject</button>
                            </div>
                        </td>
                    </tr>
					<!-- Claim 3 - Pre-Approved -->
                    <tr>
                        <td class="claim-id">CLAIM-003</td>
                        <td class="user-id">L103251</td>
                        <td>2025-09-20</td>
                        <td>Faculty of Engineering</td>
                        <td>Travel Expenses</td>
                        <td>15</td>
                        <td>R 400.00</td>
                        <td>R 6,000.00</td>
                        <td><a href="#" class="support-link">travel_receipts.zip</a></td>
                        <td>2025-09-22</td>
                        <td>2025-09-25</td>
                        <td><span class="status status-approved">Pre-Approved</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn approve-btn">Approve</button>
                                <button class="action-btn reject-btn">Reject</button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
    <!-- Footer with copyright information -->
    <footer>
        <div class="foot_container">
            &copy; 2025 - Contract Monthly Claim System (CMCS) | Designed for independent contractors' use
        </div>
    </footer>
</body>
</html>
