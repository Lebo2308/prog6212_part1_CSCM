<!-- Submit a claim Page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Submit a claim Page</title>
</head>
<body>
    <header>
        <div class="header-container">
            <h1>CSCM</h1>
            <nav>
                <ul>
                    <li><a href="@Url.Action("Dashboard","Home")">Home</a></li>
                    <li><a href="@Url.Action("SubmitAClaim","Home")">Submit a Claim</a></li>
                    <li><a href="@Url.Action("TrackClaim","Home")">Track Claim</a></li>
                    <li><a href="@Url.Action("PreapproveClaim","Home")">Pre-Approve Claim</a></li>
                    <li><a href="@Url.Action("ApproveClaim","Home")">Approve Claim</a></li>
                    <li><a href="@Url.Action("Profile","Home")">Profile</a></li>
                    <li><a href="@Url.Action("Index","Home")">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="content">
        <!-- Submit Claim Page -->
        <div id="submit-claim" class="page">
            <h2>Submit New Claim</h2>
            <div class="form-container">
                <form>
                    <div class="form-group">
                        <label for="faculty-name">Faculty Name</label>
                        <input type="text" id="faculty-name">
                    </div>
                    <div class="form-group">
                        <label for="module-name">Module Name</label>
                        <input type="text" id="module-name">
                    </div>
                    <div class="form-group">
                        <label for="hours-worked"> Number Of Hours Worked</label>
                        <input type="number" id="hours-worked" >
                    </div>
                    <div class="form-group">
                        <label for="rate">Rate: Amount Per Hour</label>
                        <input type="number" id="rate" >
                    </div>
                    <div class="form-group">
                        <label for="total-amount">Total Amount</label>
                        <input type="number" id="total-amount">
                    </div>
                    <div class="form-group">
                        <label for="upload-documents">Upload Supporting Document(s)</label>
                        <input type="file" id="upload-documents">
                    </div>
                    <a href="@Url.Action("TrackClaim","Home")" class="btn">Submit Claim</a>
                </form>
            </div>
        </div>
    </div>
    <footer>
        <div class="foot_container">
            &copy; 2025 - Contract Monthly Claim System (CMCS) | Designed for independent contractors' use
        </div>
    </footer>
</body>
</html>
